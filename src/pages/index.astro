---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Fetch all posts from src/content/blog/
const posts = await getCollection('blog');
// Sort by date descending
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Jeffrey Patton | Cloud Architect Blog">
	<section class="mb-12">
		<h1 class="text-4xl font-extrabold mb-4">Cloud Architecture & Security</h1>
		<p class="text-lg text-slate-600">Technical insights, security alerts, and EDC gear reviews for the modern IT professional.</p>
	</section>

	<div class="space-y-10">
		{sortedPosts.map((post) => (
			<article class="group">
				<div class="flex flex-col md:flex-row md:items-baseline justify-between mb-2">
					<h2 class="text-2xl font-bold group-hover:text-blue-600 transition">
						<a href={`/blog/${post.slug}`}>{post.data.title}</a>
					</h2>
					<time class="text-sm text-slate-500 font-mono">
						{post.data.pubDate.toLocaleDateString('en-US', {
							year: 'numeric',
							month: 'short',
							day: 'numeric',
						})}
					</time>
				</div>
				<p class="text-slate-600 mb-4">{post.data.description}</p>
				<div class="flex gap-2">
					{post.data.tags.map(tag => (
						<span class="bg-slate-100 text-slate-600 text-xs px-2 py-1 rounded">#{tag}</span>
					))}
				</div>
			</article>
		))}
	</div>
</Layout>
